@using BudgetTracker.BudgetSquirrel.Application
@using BudgetTracker.BudgetSquirrel.Application.Budgeting
@using BudgetTracker.BudgetSquirrel.Web.Pages
@using BudgetTracker.BudgetSquirrel.Web.ViewComponents
@using BudgetTracker.Business.Budgeting

@model SubBudgetCreationViewModel

<form class="budget-item budget-item--create-form"
        data-budget-id="@Model.ParentBudgetId"
        asp-page-handler="NewSubBudget"
        method="post">
    <div class="hidden">
        <input name="ParentBudgetId" value="@Model.ParentBudgetId">
    </div>
    <div class="budget-item__form">
        <div class="form-group">
            <label for="Name">Name of Budget</label>
            <input type="text" name="Name" placeholder="Name of Budget" />
        </div>

        <div class="form-group">
            <label for="SetAmount">Amount as Dollars</label>
            <span class="input-symbol">
                $
                <input type="number" name="SetAmount" step="0.01" placeholder="$35.50">
            </span>
        </div>

        <div class="form-group">
            <label for="PercentAmount">Amount as Percent</label>
            <span class="input-symbol">
                %
                <input type="number" name="PercentAmount" placeholder="Amount as Percent">
            </span>
        </div>
        <button class="btn" type="submit" name="submit">Create</button>
    </div>
</form>
